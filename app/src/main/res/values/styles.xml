<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGold</item>
        <item name="colorPrimaryDark">#BA9D75</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="fontFamily">@font/special_elite</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGold</item>
        <item name="colorPrimaryDark">#BA9D75</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorGold</item>
    </style>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">24sp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">60dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>


</resources>
