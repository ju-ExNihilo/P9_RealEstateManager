            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:textSize="18sp"
            android:layout_marginEnd="16dp" android:textColor="@color/colorGold"/>
    <ImageView
            app:srcCompat="@drawable/update_logo"
            android:layout_width="48dp"
            android:layout_height="0dp" android:id="@+id/update_main_feature"
            app:layout_constraintStart_toEndOf="@+id/status_title" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/status_title"
            app:layout_constraintBottom_toBottomOf="@+id/status_title" android:layout_marginEnd="32dp"
