<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_nav_graph"
            app:startDestination="@id/propertyListView">

    <fragment android:id="@+id/mainFeature"
              android:name="com.openclassrooms.realestatemanager.addproperty.MainFeature"
              android:label="">

        <action android:id="@+id/action_mainFeature_to_addressFeature"
                app:destination="@id/addressFeature"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>
        <argument android:name="propertyId" app:argType="string" android:defaultValue="null"/>
    </fragment>

    <fragment android:id="@+id/addressFeature"
              android:name="com.openclassrooms.realestatemanager.addproperty.AddressFeature"
              android:label=""
              tools:layout="@layout/fragment_address_feature">

        <action android:id="@+id/action_addressFeature_to_mainFeature"
                app:destination="@id/mainFeature"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>

        <action android:id="@+id/action_addressFeature_to_otherFeature"
                app:destination="@id/otherFeature"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>
        <argument android:name="propertyId" app:argType="string" android:defaultValue="null"/>
    </fragment>

    <fragment android:id="@+id/otherFeature"
              android:name="com.openclassrooms.realestatemanager.addproperty.OtherFeature"
              android:label="">

        <action android:id="@+id/action_otherFeature_to_addressFeature"
                app:destination="@id/addressFeature"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>

        <argument android:name="propertyId" app:argType="string" android:defaultValue="null"/>

        <action android:id="@+id/action_otherFeature_to_imagesFeature"
                app:destination="@id/imagesFeature"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>

    </fragment>

    <fragment android:id="@+id/imagesFeature"
              android:name="com.openclassrooms.realestatemanager.addproperty.ImagesFeature"
              android:label="" tools:layout="@layout/fragment_images_feature">

        <argument android:name="propertyId" app:argType="string" android:defaultValue="null"/>

        <action android:id="@+id/action_imagesFeature_to_otherFeature"
                app:destination="@id/otherFeature"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>
    </fragment>

    <fragment android:id="@+id/propertyListView"
              android:name="com.openclassrooms.realestatemanager.listview.PropertyListView"
              android:label="Real Estate Manager" tools:layout="@layout/fragment_property_list_view">

        <action android:id="@+id/action_propertyListView_to_detailsFragment"
                app:destination="@id/detailsFragment"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>

        <action android:id="@+id/action_propertyListView_to_mainFeature"
                app:destination="@id/mainFeature"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>

        <action android:id="@+id/action_propertyListView_to_mapFragment"
                app:destination="@id/mapFragment"
                app:launchSingleTop="true"
                app:popUpTo="@+id/main_nav_graph"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/fragment_fade_enter"
                app:exitAnim="@anim/fragment_fade_exit"/>
    </fragment>
    <fragment android:id="@+id/detailsFragment"
              android:name="com.openclassrooms.realestatemanager.details.DetailsFragment"
              android:label="Real Estate Manager" tools:layout="@layout/fragment_details"/>

    <fragment android:id="@+id/mapFragment" android:name="com.openclassrooms.realestatemanager.map.MapFragment"
              android:label="Real Estate Manager" tools:layout="@layout/fragment_map"/>

</navigation>